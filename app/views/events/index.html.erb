<div class="index-container">
  <div class="pic-container" >
    <%= image_tag('header.jpg') %>
  </div>

  <div class="event-container">
    <p class="events-header">Local Events</p>
    <% @events.each do |event| %>
        <div class="event-instance">
          <div>
            <% case event.activity
               when "Football" %><i class="fas fa-futbol"></i>
               <% when "Art Therapy" %><i class="fas fa-palette"></i>
               <% when "Cafe"  %><i class="fas fa-mug-hot"></i>
            <% end %>
          </div>
          <div class="content"><%= event.venue.name %></div>
          <div class="content"><%= event.date.strftime("%A %d %B") %></div>
          <div class="link-span"><%= link_to "See more", event_path(event) %></div>

        </div>
    <% end %>
  </div>

</div>
